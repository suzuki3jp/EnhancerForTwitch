{
  "name": "chrome-extension-boilerplate-react-vite",
  "version": "1.1.1",
  "description": "chrome extension boilerplate",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Jonghakseo/chrome-extension-boilerplate-react-vite.git"
  },
  "scripts": {
    "build": "tsc --noEmit && vite build",
    "build:firefox": "tsc --noEmit && cross-env __FIREFOX__=true vite build",
    "build:watch": "cross-env __DEV__=true vite build -w --mode development",
    "build:firefox:watch": "cross-env __DEV__=true __FIREFOX__=true vite build -w --mode development",
    "build:hmr": "rollup --config utils/reload/rollup.config.mjs",
    "wss": "node utils/reload/initReloadServer.js",
    "dev": "npm run build:hmr && (run-p wss build:watch)",
    "dev:firefox": "npm run build:hmr && (run-p wss build:firefox:watch)",
    "test": "vitest",
    "commitlint": "commitlint --edit",
    "lint": "eslint src --ext .ts,.js,.tsx,.jsx",
    "lint:fix": "npm run lint --fix",
    "prettier": "prettier . --write",
    "prepare": "husky install"
  },
  "type": "module",
  "dependencies": {
    "construct-style-sheets-polyfill": "3.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "webextension-polyfill": "0.10.0"
  },
  "devDependencies": {
    "@rollup/plugin-sucrase": "^5.0.2",
    "@rollup/plugin-typescript": "11.1.6",
    "@testing-library/react": "15.0.7",
    "@types/chrome": "0.0.251",
    "@types/node": "20.12.13",
    "@types/react": "18.2.37",
    "@types/react-dom": "18.2.18",
    "@types/ws": "8.5.10",
    "@typescript-eslint/eslint-plugin": "7.11.0",
    "@typescript-eslint/parser": "7.11.0",
    "@vitejs/plugin-react": "4.3.0",
    "chokidar": "3.6.0",
    "cross-env": "7.0.3",
    "eslint": "9.3.0",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react": "7.34.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "fs-extra": "11.2.0",
    "husky": "9.0.11",
    "jsdom": "^24.1.0",
    "lint-staged": "15.2.0",
    "magic-string": "^0.30.6",
    "npm-run-all": "4.1.5",
    "prettier": "3.2.5",
    "rollup": "4.18.0",
    "sass": "1.77.2",
    "ts-loader": "9.5.0",
    "tslib": "2.6.2",
    "typescript": "5.4.5",
    "vite": "5.2.12",
    "vitest": "^1.6.0",
    "ws": "8.17.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}